<div class="card mt-5 col-12">
  <div class="card-header d-flex justify-content-center text-bg-dark">
    Made by: {{blog.user.username}}
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p>{{blog.content}}</p>
      <br />
      {{#if blog.image}}
      <img src={{blog.image}} alt="image" class="img-fluid">
      <br />
      <br />
      {{/if}}
      <footer class="blockquote-footer">{{format_date blog.createdAt}} <button id="likeBtn" onclick="like(this)" class="{{blog.id}} {{blog.totalLikes}} {{loggedInUser.id}} fa fa-thumbs-up"></button> Likes: {{blog.totalLikes}}</footer>
    </blockquote>
  </div>
</div>

<div class="ml-4">
<form>
    <div class="card mt-5 col-12">
  <div class="card-header d-flex justify-content-center text-bg-dark">
    <h4>Add a comment: </h4>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <input id='comment' type="text" name="comment" class="col-11" placeholder="Wow thats cool!!"/>
      <button type="button" class="btn btn-dark text-light" id="commentSubmitBtn">Submit</button>
    </blockquote>
  </div>
</div>
</form>
</div>



{{#each comment}}

<h2>Comments: </h2>
<div class="card mt-1 col-12">
    <div class="card-header d-flex justify-content-center text-bg-dark">
    Made by: {{username}}
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p>{{content}}</p>
      <footer class="blockquote-footer">{{format_date createdAt}}</footer>
    </blockquote>
  </div>
</div>

{{/each}}