<!DOCTYPE html>
<head>
    <meta charset="UTF-8">
    <title>Chirper</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/jass.css">
</head>

<body>
  {{! Navbar }}
  <nav class="navbar navbar-expand-lg bg-body-tertiary navbar bg-dark" data-bs-theme="dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">Chirper</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ">
        <li class="nav-item">
          {{#if loggedInUser}} <a class="nav-link" aria-current="page" href="/homepage">Home</a>{{/if}}
        </li>
        <li class="nav-item">
          {{#if loggedInUser}}<a class="nav-link" href="/users/{{loggedInUser.id}}">Profile</a>{{/if}}
        </li>
        
      </ul>
    </div>
    <div>
      <ul>
        <li class="nav-item d-flex">
          {{#if loggedInUser}}
          <button id="logoutBtn">Log out</button>
          {{/if}}
        </li>
      </ul>
    </div>
  </div>
</nav>




